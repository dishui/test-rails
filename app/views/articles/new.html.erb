<h1>Create an Article</h1>

<%= form_for @article do |f| %>
    <p>
    <%= f.lable :title %> &nbsp;
    <%= f.text_field :title %>
    </p>

    <p>
    <%= f.label :description %> &nbsp;
    <%= f.text_area :description %>
    </p>

    <p>
    <%= f.submit %>
    </p>
<% end %>
<%= render 'form', article: @article %>

<%= link_to 'Back', articles_path %>
